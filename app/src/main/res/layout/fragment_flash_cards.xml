<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?android:actionBarSize"
    android:orientation="vertical"
    tools:context="com.appbusters.robinkamboj.grewordlist.view.fragments.FlashCardsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        app:cardElevation="3sp"
        app:cardCornerRadius="5sp"
        app:cardBackgroundColor="@color/colorPrimaryLight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Word"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30sp"
            android:gravity="center"
            android:padding="10sp"
            android:textColor="@color/colorWhiteShade"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick The Correct Meaning for the Word:"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10sp"
        android:textColor="@color/colorBlackShade"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview"
        android:layout_margin="5sp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
